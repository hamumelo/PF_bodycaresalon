<div class="container">
  <div class="row">
    <div class="mt-4 mb-4 col-4">
      <h5 class="bg-light"><strong>施術ジャンル登録</strong></h5>
    </div>
  </div>


<%= form_with model: @genre, url: admin_genres_path,  local:true do |f| %>
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">施術ジャンル名</label>
    <div class="col-sm-3">
    <%= f.text_field :name, placeholder:"ジャンル名" %>
     </div>
     <div class="col-sm-2">
     <%= f.submit "新規登録", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
</div>




<div class="container">
  <div class="form-group row">
    <div class="mt-5 col-sm-4">

 <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th class="pl-5 bg-light">施術ジャンル</th>
    </tr>
  </thead>
  <tbody>


    <% @genres.each do |genre| %>
      <tr>
        <td>
          <%= genre.name %>
        </td>
        <td>
          <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success edit" %>
        </td>
    <% end %>

  </tbody>
 </table>
</div>
</div>
</div>